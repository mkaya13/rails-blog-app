<%= render "shared/users", user: @user %>
<section class="user_bio">
  <h3>Bio</h3>
  <p><%= @user.bio %></p>
</section>
<section>
  <% @posts.each do |post| %>
    <%= render "shared/posts", post: post, user: @user %>
  <% end %>
</section>

<div class="posts-stuff"> 
<a class="new_post" href=<%= "/users/#{@user.id}/posts/new" %>>Add A New Post</a>
<a class="view_all_posts" href= <%= "#{@user.id}/posts" %> >View All Posts</a>
</ div>
